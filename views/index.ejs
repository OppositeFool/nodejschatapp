<!DOCTYPE html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
      body { margin: 0; padding-bottom: 3rem; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; }

      #form { background: rgba(0, 0, 0, 0.15); padding: 0.25rem; position: fixed; bottom: 0; left: 0; right: 0; display: flex; height: 3rem; box-sizing: border-box; backdrop-filter: blur(10px); }
      #input { border: none; padding: 0 1rem; flex-grow: 1; border-radius: 2rem; margin: 0.25rem; }
      #input:focus { outline: none; }
      #form > button { background: #333; border: none; padding: 0 1rem; margin: 0.25rem; border-radius: 3px; outline: none; color: #fff; }

      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages > li { padding: 0.5rem 1rem; }
      #messages > li:nth-child(odd) { background: #efefef; }
        #typingWrapper {
            display: flex;
           row-gap: 10px;
           column-gap: 10px;
           flex-wrap: wrap;
           padding: 20px;
           position: fixed;
           bottom: 40px;
        }
        .typingElement {
            border: 5px dotted #aaa;
            padding: 10px;
            margin: 0;
        }
    </style>
  </head>
  <body>
    <div id="typingWrapper">
    </div>
    <ul id="messages"></ul>
    <form id="form" action="">
      <input id="input" autocomplete="off" /><button>Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
         let yourName = "";
   // while(yourName == "") {
        yourName = prompt("Enter your name!", "")
    //  }
      var socket = io();
    //  let yourName = prompt("Enter your name!", "")
      var messages = document.getElementById('messages');
      var form = document.getElementById('form');
      var input = document.getElementById('input');
        $('#input').on('keyup', function(e) {
            if(this.value !== "")
           socket.emit('userIsTyping', true)
           else
           socket.emit('userIsTyping', false)
        })
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        if (input.value) {
          socket.emit('chat message', input.value, yourName);
          input.value = '';
        }
      });
      
      socket.on('chat message', function(msg, yourName) {
        var item = document.createElement('li');
        item.textContent =  yourName + ": " + msg;
        messages.appendChild(item);
        window.scrollTo(0, document.body.scrollHeight);
      });
      socket.on('emitToUser', (arg) => {
        var item = document.createElement('li');
        item.textContent = arg;
        messages.appendChild(item);
        window.scrollTo(0, document.body.scrollHeight);
      })
      socket.on('userIsTyping', (bool) => {
        const element = $('.typingElement')
        console.log(bool);
        if(bool && element.length === 0) {
            $('#typingWrapper').append(" <p class='typingElement'>A user is typing</p>")
        }
            if(!bool)
            $('.typingElement').remove()
      })
    </script>
  </body>
</html>